---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import StickyCall from "../../components/StickyCall.astro";

import Hero from "../../components/Sections/Hero.astro";
import Brands from "../../components/Sections/Brands.astro";
import Services from "../../components/Sections/Services.astro";
import Features from "../../components/Sections/Features.astro";
import Steps from "../../components/Sections/Steps.astro";
import FAQ from "../../components/Sections/FAQ.astro";
import BlogTeaser from "../../components/Sections/BlogTeaser.astro";
import FinalCTA from "../../components/Sections/FinalCTA.astro";

const canonical = "https://bartar-repairer.com/landing-divar-laptop/";

import { LANDING } from "../../config/landing";

const schema = [
  {
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "name": "برتر سرویس",
    "url": canonical,
    "telephone": LANDING.phone,
    "areaServed": "تهران/ Tehran",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Tehran",
      "streetAddress": "تهران، خیابان مطهری، خیابان فراهانی، پلاک ۵۶، ساختمان برتر سرویس",
      "addressCountry": "IR"
    }
  },
  {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": [
      {
        "@type": "Question",
        "name": "هزینه تعمیر لپ تاپ چطور مشخص می‌شود؟",
        "acceptedAnswer": { "@type": "Answer", "text": "پس از عیب‌یابی تخصصی، هزینه قطعی اعلام می‌شود. در صورت عدم تایید شما، تعمیر انجام نمی‌شود." }
      },
      {
        "@type": "Question",
        "name": "چقدر زمان می‌برد تا لپ تاپ آماده شود؟",
        "acceptedAnswer": { "@type": "Answer", "text": "بسته به نوع خرابی متفاوت است. موارد رایج در سریع‌ترین زمان ممکن انجام می‌شود و زمان تقریبی بعد از بررسی اعلام می‌گردد." }
      },
      {
        "@type": "Question",
        "name": "گارانتی تعمیرات دارید؟",
        "acceptedAnswer": { "@type": "Answer", "text": "بله، تعمیرات با گارانتی کتبی و معتبر تحویل داده می‌شود." }
      },
      {
        "@type": "Question",
        "name": "برای تهران پیک رایگان دارید؟",
        "acceptedAnswer": { "@type": "Answer", "text": "بله، دریافت و ارسال دستگاه در تهران با پیک رایگان انجام می‌شود." }
      },
      {
        "@type": "Question",
        "name": "یا از قطعات اورجینال استفاده می‌کنید؟",
        "acceptedAnswer": { "@type": "Answer", "text": "در صورت نیاز به تعویض قطعه، گزینه‌های قطعه (اورجینال/جایگزین) شفاف توضیح داده می‌شود." }
      }
    ]
  }
];

---

<BaseLayout
  title="تعمیرات لپ تاپ در تهران | برتر سرویس"
  description="تعمیرات تخصصی لپ تاپ با عیب‌یابی دقیق، قطعات اورجینال، گارانتی کتبی و پیک رایگان در تهران. همین حالا تماس بگیرید."
  canonical={canonical}
  gtmId="GTM-KZQV2SN"
  schemaJson={schema}
>
  <Header />

  <main>
    <Hero />
    <Brands />
    <Services />
    <Features />
    <Steps />
    <FAQ />
    <BlogTeaser />
    <FinalCTA />
  </main>

  <StickyCall phone="02191300348" />

  <style>
  main { padding-bottom: 90px; }
  @media (min-width: 900px){ main { padding-bottom: 0; } }
</style>

</BaseLayout>
