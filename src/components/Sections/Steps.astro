---
const phone = "02191300348";

const steps = [
  { t: "تماس و توضیح مشکل", d: "مشاوره رایگان و ثبت اولیه درخواست" },
  { t: "دریافت دستگاه", d: "پیک رایگان در تهران یا تحویل حضوری" },
  { t: "عیب‌یابی تخصصی", d: "بررسی دقیق و اعلام هزینه قطعی" },
  { t: "تعمیر و تست نهایی", d: "تحویل با گارانتی کتبی تعمیرات" },
];
---

<section class="steps" aria-label="مراحل تعمیر لپ تاپ">
  <div class="container">
    <div class="steps__head">
      <h2 class="steps__title">مراحل تعمیر</h2>
      <p class="steps__subtitle">شفاف، مرحله‌به‌مرحله، بدون ابهام.</p>
    </div>

    <ol class="steps__list">
      {steps.map((s, i) => (
        <li class="step">
          <div class="step__num" aria-hidden="true">{i + 1}</div>
          <div class="step__body">
            <div class="step__t">{s.t}</div>
            <div class="step__d">{s.d}</div>
          </div>
        </li>
      ))}
    </ol>

    <a class="steps__cta" href={`tel:${phone}`} data-track="steps_call" data-track-meta={phone}>
      تماس برای شروع تعمیر: {phone}
    </a>
  </div>
</section>

<style>
  .steps{ padding: 14px 0 6px; }
  .steps__head{ margin-bottom: 12px; }
  .steps__title{ margin: 0 0 6px; font-size: 18px; }
  .steps__subtitle{ margin: 0; font-size: 13px; opacity: 0.85; }

  .steps__list{
    margin: 0;
    padding: 0;
    list-style: none;
    display: grid;
    gap: 10px;
  }
  .step{
    display:flex;
    gap: 12px;
    padding: 12px;
    border-radius: 16px;
    border: 1px solid rgba(0,0,0,0.10);
    background: rgba(0,0,0,0.02);
    align-items:flex-start;
  }
  .step__num{
    width: 34px; height: 34px;
    border-radius: 12px;
    display:flex; align-items:center; justify-content:center;
    background: #111; color: #fff;
    font-weight: 900;
    flex: 0 0 auto;
  }
  .step__t{ font-weight: 900; font-size: 14px; margin-bottom: 2px; }
  .step__d{ font-size: 13px; opacity: 0.85; }

  .steps__cta{
    margin-top: 12px;
    display:flex;
    align-items:center;
    justify-content:center;
    padding: 12px 14px;
    border-radius: 16px;
    background: #111;
    color: #fff;
    font-weight: 900;
    border: 1px solid rgba(0,0,0,0.12);
  }

  @media (min-width: 900px){
    .steps{ padding: 18px 0 8px; }
    .steps__list{ grid-template-columns: repeat(2, 1fr); }
  }
</style>