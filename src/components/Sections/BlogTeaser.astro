---
const blogUrl = "https://bartar-repairer.com/blog/"; // اگر صفحه تخصصی مقالات تعمیر لپ‌تاپ داری، همین رو تغییر بده
---

<section class="blogTeaser" aria-label="مقالات تعمیر لپ تاپ">
  <div class="container">
    <div class="blogTeaser__box">
      <div class="blogTeaser__text">
        <h2 class="blogTeaser__title">مقالات و آموزش‌های تعمیر لپ‌تاپ</h2>
        <p class="blogTeaser__desc">
          اگر می‌خواید قبل از اقدام اطلاعات بیشتری داشته باشید، این مقالات می‌تونه کمک‌تون کنه.
        </p>
      </div>

      <a
        class="blogTeaser__btn"
        href={blogUrl}
        target="_blank"
        rel="noopener"
        data-track="blog_teaser_click"
      >
        مشاهده مقالات
      </a>
    </div>
  </div>
</section>

<style>
  .blogTeaser{ padding: 14px 0 6px; }

  .blogTeaser__box{
    display:flex;
    flex-direction: column;
    gap: 12px;
    padding: 14px;
    border-radius: 18px;
    border: 1px solid rgba(0,0,0,0.10);
    background: #fff;
  }

  .blogTeaser__title{ margin: 0 0 6px; font-size: 16px; font-weight: 900; }
  .blogTeaser__desc{ margin: 0; font-size: 13px; opacity: 0.85; }

  .blogTeaser__btn{
    display:flex;
    align-items:center;
    justify-content:center;
    padding: 12px 14px;
    border-radius: 16px;
    background: rgba(0,0,0,0.02);
    border: 1px solid rgba(0,0,0,0.10);
    font-weight: 900;
  }

  @media (min-width: 900px){
    .blogTeaser{ padding: 18px 0 8px; }
    .blogTeaser__box{
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }
    .blogTeaser__btn{ min-width: 220px; }
  }
</style>